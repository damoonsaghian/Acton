Actor := &
	data': X'
	messages: Array { ' | ' }

Actor = &
	new: { data :X' | :Actor(X')
		; register the actor
		; use a static variable to hold its state
		'{}
		Actor. data []
	}
	
	do: { self!, message ::{ ' | ' } |
		; notify that there is a new message
		'{}
		self.messages.append message
	}
